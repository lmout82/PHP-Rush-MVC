{% extends "layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

{% include 'header_admin.html.twig' %} <!-- revoir le header afin qu'il fonctionne normalement -->

<section id="content">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading">Admin users</h2>
				<h3 class="section-subheading text-muted">-An SQL statement walks into a bar and sees two tables. It approaches, and asks "may I join you?"<br/>-(0 rows affected)</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 text-left">
				<table width="100%" border="1">
						<tr class="th">		
							<th class="text-center">Id</th>
							<th class="text-center">Username</th>
							<th class="text-center">Email</th>
							<th class="text-center">Group</th>
							<th class="text-center">Banished</th>
							<th class="text-center">Creation</th>
							<th class="text-center">Last modification</th>
							<th class="text-center">Action</th>
						</tr>
						{% for user in users %}
						<tr class="td text-left">
							<td>{{user.id}}</td>
							<td><a href="/PHP_Rush_MVC/index.php/admin/users/update/{{user.id}}">{{user.username}}</a></td>
							<td>{{user.email}}</td>
							<td>{{user.group_name}}</td>
							<td>{{ user.is_banished == 0 ? 'No':'Yes' }}</td>
							<td>{{user.creation_date}}</td>
							<td>{{user.modification_date}}</td>
							<td><a href="/PHP_Rush_MVC/index.php/admin/users/delete/{{user.id}}" class="text-danger">
								<span class="fa-stack fa-1x">
									<i class="fa fa-trash fa-stack-1x"></i>
								</span> Delete</a>
							</td>	
						</tr>
						{% endfor %}
				</table>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading">&nbsp;</h2>
				</div>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<div class="col-lg-12 text-center">
		<div id="success">
			<a href="/PHP_Rush_MVC/index.php/admin/users/add">
				<button class="btn btn-xl">Create a new user</button>
			</a>
		</div>
	</div>
</section>
{% endblock %}
