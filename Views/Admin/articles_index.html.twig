{% extends "layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

{% include 'header_admin.html.twig' %} <!-- revoir le header afin qu'il fonctionne normalement -->

<section id="content">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading">Article management</h2>
				<h3 class="section-subheading text-muted">-An SQL statement walks into a bar and sees two tables. It approaches, and asks "may I join you?"<br/>-(0 rows affected)</h3>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 text-left">
				<table width="100%" border="1">
						<tr class="th">		
							<th class="text-center">Id</th>
							<th class="text-center">Title</th>
							<th class="text-center">Category</th>
							<th class="text-center">User</th>
							<th class="text-center">Creation</th>
							<th class="text-center">Last modification</th>
							<th class="text-center">Action</th>
						</tr>
						{% for article in articles %}
						<tr class="td text-left">
							<td>{{article.id}}</td>
							<td><a href="/PHP_Rush_MVC/index.php/admin/articles/update/{{article.id}}">{{article.title}}</a></td>
							<td>{{article.category_name}}</td>
							<td>{{article.username}}</td>
							<td>{{article.creation_date}}</td>
							<td>{{article.modification_date}}</td>
							<td><a href="/PHP_Rush_MVC/index.php/admin/articles/delete/{{article.id}}" class="text-danger">
								<span class="fa-stack fa-1x">
									<i class="fa fa-trash fa-stack-1x"></i>
								</span> Delete</a>
							</td>		
						</tr>
						{% endfor %}
				</table>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading">&nbsp;</h2>
				</div>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<div class="col-lg-12 text-center">
		<div id="success">
			<a href="/PHP_Rush_MVC/index.php/admin/articles/add">
				<button class="btn btn-xl">Create a new article</button>
			</a>
		</div>
	</div>
</section>
{% endblock %}