{% extends "layout.html.twig" %}

{% block title %} Registration {% endblock %}

{% block content %}

{% include 'header_user.html.twig' %}

	<div class="row">
		<div class="col-lg-12">
			<div>
				<h4 class="team-member text-danger">
				{% for msg in error_msg %}
					{{ msg }}<br/>
				{% endfor %}
				</h4>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<form id="registration" novalidate="" name="registration" method="post">
				<div class="row">
					<div class="col-md-3"></div>
					<div class="col-md-6">
						<div class="form-group">
							<input id="name" class="form-control" type="text" data-validation-required-message="Please enter your username." placeholder="Please enter your username." required name="username" min="3" max="10" value="{{ username }}">
							<p class="help-block text-danger"></p>
						</div>
						<div class="form-group">
							<input id="email" class="form-control" type="email" data-validation-required-message="Please enter your email address." placeholder="Please enter your email address." required name="email" value="{{ email }}">
							<p class="help-block text-danger"></p>
						</div>
						<div class="form-group">
							<input id="password" class="form-control" type="password" data-validation-required-message="Please enter your password." placeholder="Please enter your password." required name="password">
							<p class="help-block text-danger"></p>
						</div>
						<div class="form-group">
							<input id="password_conf" class="form-control" type="password" data-validation-required-message="Please enter your password." placeholder="Please enter your password." required name="password_conf">
							<p class="help-block text-danger"></p>
						</div>
					</div>
				</div>
				<div class="clearfix"></div>
				<div class="col-lg-12 text-center">
					<div id="success"></div>
						<button class="btn btn-xl" type="submit">Registration</button>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}